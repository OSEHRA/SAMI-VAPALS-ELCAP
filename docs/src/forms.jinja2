{# today: variable used to define what "today" is. Hardcoded in Mumps code, so do not change.#}

{% set today="01/Mar/2018" %}

{% macro floatingLabel(for, text) -%}
    <label for="{{ for }}" class="visible-xs visible-sm">{{ text }}</label>
    <label for="{{ for }}" class="text-right pull-right hidden-xs hidden-sm">{{ text }}</label>
{%- endmacro %}

{% macro inlineRadio(groupName, id, value, labelText, required, onclick) -%}
    <label class="radio-inline">
        <input type="radio" name="{{ groupName }}" id="{{ id }}"
                {{ " onclick=\""+ onclick + "\"" if onclick else "" }}
                {{ " required=\"required\" data-fv-notempty-message=\"Please select a value\"" if required else "" }}
               value="{{ value }}">
        {{ labelText }}
    </label>
{%- endmacro %}

{% macro inlineRadioNYQ(groupName) -%}
    {{ inlineRadio(groupName, groupName+"-n","n","No",true) }}
    {{ inlineRadio(groupName, groupName+"-y","y","Yes",true) }}
    {{ inlineRadio(groupName, groupName+"-q","q","?",true) }}
{%- endmacro %}

{% macro inlineRadioNYE(groupName) -%}
    {{ inlineRadio(groupName, groupName+"-n","n","No",true) }}
    {{ inlineRadio(groupName, groupName+"-y","y","Yes",true) }}
    {{ inlineRadio(groupName, groupName+"-e","e","n/v",true) }}
{%- endmacro %}


{% macro checkbox(name, value, labelText, attributes) -%}
    <div class="checkbox">
        <label>
            <input type="checkbox" name="{{ name }}" id="{{ name }}" value="{{ value }}"
            {% set x = "" %}
            {% if attributes!=null %}
                {% for k,v in attributes.items() %}
                    {{ k }}="{{ v }}"
                {% endfor %}
            {% endif %}
            >
            {{ labelText }}
        </label>
    </div>
{%- endmacro %}

{% macro datepicker(name, pastDateRequired, requiredMessage) -%}
    <div class="input-group datepicker">
        <input class="form-control" id="{{ name }}" name="{{ name }}" aria-describedby="{{ name }}-addon"
                {{ " required=\"required\"" if requiredMessage else "" }}
                {{ " data-fv-notempty-message=\"" + requiredMessage + "\"" if requiredMessage else "" }}
                {{ " data-max-date=\"" + today + "\"" if pastDateRequired else "" }}
                data-fv-callback="true" data-fv-callback-message="Enter a valid date"
                data-fv-callback-callback="validateInternationalDate">
        <div class="input-group-addon">
            <div class="input-group-text" id="{{ name }}-addon">
                <i class="fa fa-calendar" aria-hidden="true"></i>
            </div>
        </div>
    </div>
    <small class="form-text text-muted">DD/MMM/YYYY</small>
{%- endmacro %}

{% macro yearpicker(name, pastdateRequired, required, small, helpText) -%}
    <input class="form-control {{ "input-sm" if small else "" }} numeric yearpicker" type="text"
           name="{{ name }}" id="{{ name }}" size="5"
            {{ " required=\"required\"" if required else "" }}
            {{ " data-max-date=\"" + today + "\"" if pastDateRequired else "" }}
           data-fv-integer="true" maxlength="4"
           placeholder="YYYY" title="Last cigarette year">
    {{ "<small class=\"help-block\">" + helpText + "</small>" if helpText else "" }}

{%- endmacro %}

