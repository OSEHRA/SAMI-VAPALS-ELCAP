{% macro floatingLabel(for, text, extraClasses) -%}
    <label for="{{ for }}" 
        class="visible-xs visible-sm {{ extraClasses }}"
    >{{ text }}</label>
    <label for="{{ for }}" class="text-right pull-right hidden-xs hidden-sm {{ extraClasses }}">{{ text }}</label>
{%- endmacro %}

{% macro inlineRadio(groupName, id, value, labelText, required, checked, onclick) -%}
    <label class="radio-inline" for="{{ id }}">
        <input type="radio" name="{{ groupName }}" id="{{ id }}"
                {{ " onclick=\""+ onclick + "\"" if onclick else "" }}
                {{ " checked" if checked else "" }}
                {{ " required=\"required\" data-fv-notempty-message=\"Please select a value\"" if required else "" }}
               value="{{ value }}">
        {{ labelText }}
    </label>
{%- endmacro %}


{% macro inlineRadioNY(groupName, required) -%}
    {{ inlineRadio(groupName, groupName+"-n","n","No",required) }}
    {{ inlineRadio(groupName, groupName+"-y","y","Yes",required) }}
{%- endmacro %}

{% macro inlineRadioNYQ(groupName, required) -%}
    {{ inlineRadio(groupName, groupName+"-n","n","No",required) }}
    {{ inlineRadio(groupName, groupName+"-y","y","Yes",required) }}
    {{ inlineRadio(groupName, groupName+"-q","q","?",required) }}
{%- endmacro %}

{% macro inlineRadioNYE(groupName, required) -%}
    {{ inlineRadio(groupName, groupName+"-n","n","No",required) }}
    {{ inlineRadio(groupName, groupName+"-y","y","Yes",required) }}
    {{ inlineRadio(groupName, groupName+"-e","e","not visible",required) }}
{%- endmacro %}

{% macro radio(group, id, value, label, required, checked) -%}
    <div class="radio">
        <label>
            <input type="radio" name="{{ group }}" id="{{ id }}" value="{{ value }}"
                    {{ "checked" if checked else "" }}
                    {{ "required=\"required\"" if required else "" }}>
            {{ label }}
        </label>
    </div>
{%- endmacro %} %}


{% macro checkbox(name, value, labelText, attributes, required) -%}
    <div class="checkbox">
        <label {{ "class=\"required\"" if required else "" }} >
            <input type="checkbox" name="{{ name }}" id="{{ name }}" value="{{ value }}"
            {{ "required=\"required\"" if required else "" }}
            {% set x = "" %}
            {% if attributes!=null %}
                {% for k,v in attributes.items() %}
                    {{ k }}="{{ v }}"
                {% endfor %}
            {% endif %}
            >
            {{ labelText }}
        </label>
    </div>
{%- endmacro %}

{% macro inlineCheckbox(name, value, labelText, attributes, required) -%}
    <label class="checkbox-inline {{ "required" if required else "" }}">
        <input type="checkbox" name="{{ name }}" id="{{ name }}" value="{{ value }}"
        {{ "required=\"required\"" if required else "" }}
        {% set x = "" %}
        {% if attributes!=null %}
            {% for k,v in attributes.items() %}
                {{ k }}="{{ v }}"
            {% endfor %}
        {% endif %}
        >
        {{ labelText }}
    </label>
{%- endmacro %}

{% macro datepicker(name, pastDateRequired, requiredMessage) -%}
    <div class="input-group datepicker">
        <input class="form-control" id="{{ name }}" name="{{ name }}" aria-describedby="{{ name }}-addon"
                {{ " required=\"required\"" if requiredMessage else "" }}
                {{ " data-fv-notempty-message=\"" + requiredMessage + "\"" if requiredMessage else "" }}              
                {{ " data-fv-date-max=\"VAPALS.todaysDate\"" if pastDateRequired else "" }}
                data-fv-date="true">
        <div class="input-group-addon">
            <div class="input-group-text" id="{{ name }}-addon">
                <i class="fa fa-calendar" aria-hidden="true"></i>
            </div>
        </div>
    </div>
    <small class="form-text text-muted">MM/DD/YYYY</small>
{%- endmacro %}

{% macro yearpicker(name, pastdateRequired, required, small, helpText, title) -%}
    <input class="form-control {{ "input-sm" if small else "" }} numeric yearpicker" type="text"
           name="{{ name }}" id="{{ name }}" size="5"
            {{ " required=\"required\"" if required else "" }}
            {{ " data-fv-date-max=\"VAPALS.todaysDate\"" if pastDateRequired else "" }}
           data-fv-integer="true" maxlength="4"
           placeholder="YYYY" 
           title="{{title}}"
           >
    {{ "<small class=\"help-block\">" + helpText + "</small>" if helpText else "" }}

{%- endmacro %}

