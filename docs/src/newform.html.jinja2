{% extends 'layout.jinja2' %}
{% import 'forms.jinja2' as f %}
{% block title %}{{ title | escape }}{% endblock %}

{% block body %}
    <div class="container-fluid" style="max-width:1550px">
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">New Form</h3>
                    </div>
                    <div class="panel-body">
                        <form action="todo" method="post">
                            <div class="form-group">
                                <label>
                                    Please select the type of form to create
                                </label>
                                <select name="form" id="form" class="form-control">
                                    <option value="background"> Screening Background
                                    <option value="ctevaluation"> CT Evaluation
                                    <option value="followup"> Follow-up
                                    <option value="biopsy"> Biopsy
                                    <option value="newform"> Pre-Intervention
                                    <option value="newform"> Intervention
                                    <option value="pet"> PET Evaluation
                                </select>
                            </div>
                            <div class="pull-right">
                                <input type="submit" value="Create New Form" class="btn btn-primary" id="submit-button">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}